载第一页\n      // 2.点击加载更多按钮加载下一页\n      // 3.添加新评论,看第一条内容\n      this.pageIndex++;\n      var url = \"newslist/commentlist?nid=\" + this.id + \"&pno=\" + this.pageIndex;\n      this.$http.get(url).then(function (result) {\n        console.log(result);\n\n        if (_this2.pageIndex < result.body.pageCount + 1) {\n          // console.log(result.body.data);\n          _this2.list = _this2.list.concat(result.body.data);\n        } else {\n          Toast(\"没有更多啦\");\n        }\n      });\n    }\n  },\n  created: function created() {\n    this.getCommentList();\n  },\n  props: [\"id\"]\n};",{"version":3,"sources":["comment.vue"],"names":[],"mappings":";;;;;;;;;;;;;;;;;;;AAoBA,SAAA,KAAA,QAAA,SAAA;AACA,eAAA;AACA,MADA,kBACA;AACA,WAAA;AACA,YAAA,EADA;AAEA,WAAA,EAFA;AAEA;AACA,iBAAA,CAHA,CAGA;;AAHA,KAAA;AAKA,GAPA;AAQA,WAAA;AACA,eADA,yBACA;AAAA;;AACA,UAAA,WAAA,MAAA;AACA,UAAA,MAAA,KAAA,EAAA;AACA,UAAA,UAAA,KAAA,GAAA,CAHA,CAGA;AAEA;AACA;;AACA,UAAA,MAAA,sBAAA;AACA,UAAA,MAAA;AAAA,aAAA,GAAA;AAAA,iBAAA,OAAA;AAAA,kBAAA;AAAA,OAAA;AACA,WAAA,KAAA,CAAA,IAAA,CAAA,GAAA,EAAA,GAAA,EAAA,IAAA,CAAA,kBAAA;AACA;AACA,YAAA,OAAA,IAAA,CAAA,IAAA,IAAA,CAAA,EAAA;AACA,gBAAA,OAAA,IAAA,CAAA,GAAA;AACA,gBAAA,GAAA,GAAA,EAAA;AACA,gBAAA,SAAA,GAAA,CAAA,CAHA,CAGA;;AACA,gBAAA,IAAA,GAAA,EAAA,CAJA,CAIA;;AACA,gBAAA,cAAA,GALA,CAKA;;AACA,SANA,MAMA;AACA,gBAAA,OAAA,IAAA,CAAA,GAAA;AACA;AACA,OAXA;AAYA,KAtBA;AAuBA,kBAvBA,4BAuBA;AAAA;;AACA;AACA;AACA;AACA;AACA,WAAA,SAAA;AACA,UAAA,MAAA,8BAAA,KAAA,EAAA,GAAA,OAAA,GAAA,KAAA,SAAA;AACA,WAAA,KAAA,CAAA,GAAA,CAAA,GAAA,EAAA,IAAA,CAAA,kBAAA;AACA,gBAAA,GAAA,CAAA,MAAA;;AACA,YAAA,OAAA,SAAA,GAAA,OAAA,IAAA,CAAA,SAAA,GAAA,CAAA,EAAA;AACA;AACA,iBAAA,IAAA,GAAA,OAAA,IAAA,CAAA,MAAA,CAAA,OAAA,IAAA,CAAA,IAAA,CAAA;AACA,SAHA,MAGA;AACA,gBAAA,OAAA;AACA;AAEA,OATA;AAUA;AAxCA,GARA;AAkDA,SAlDA,qBAkDA;AACA,SAAA,cAAA;AACA,GApDA;AAqDA,SAAA,CAAA,IAAA;AArDA,CAAA","sourcesContent":["<template>\r\n    <div id=\"app_subcomment\">\r\n        <h3>发表评论</h3>\r\n        <hr/>\r\n        <textarea placeholder=\"请输入评论内容,最多不超过120个字\" maxlength=\"120\" v-model=\"msg\"></textarea>\r\n        <mt-button size=\"large\" type=\"primary\" @click=\"postComment\">发表评论</mt-button>\r\n        <div class=\"cmt-list\">\r\n            <div  class=\"cmt-list-item\" v-for=\"(item,i) in list\" :key=\"item.id\">\r\n                <div class=\"cmt-title\">\r\n                    第{{i+1}}楼 &nbsp;&nbsp; 用户:{{item.username}}  发表时时间:{{item.ctime | dateFormat}}\r\n                </div>\r\n                <div class=\"cmt-body\">\r\n                    {{item.content}}\r\n                </div>\r\n            </div>\r\n        </div>\r\n        <mt-button type=\"danger\" size=\"large\" @click=\"getCommentList\">加载更多</mt-button>\r\n    </div>\r\n</template>\r\n<script>\r\n    import {Toast} from \"mint-ui\";\r\n    export default{\r\n        data(){\r\n            return{\r\n                list:[],\r\n                msg:\"\",  //双向绑定留言内容\r\n                pageIndex:0  //当前显示页码\r\n            }\r\n        },\r\n        methods:{\r\n            postComment(){\r\n                var username=\"匿名用户\";\r\n                var nid=this.id;\r\n                var content=this.msg;  //双向绑定留言内容\r\n\r\n                // 对留言内容进行验证\r\n                // console.log(username+\":\"+nid+\":\"+content);\r\n                var url=\"newslist/saveComment\";\r\n                var obj={nid:nid,content:content,username:username};\r\n                this.$http.post(url,obj).then(result=>{\r\n                    // console.log(result);\r\n                    if(result.body.code==1){\r\n                        Toast(result.body.msg);\r\n                        this.msg=\"\";\r\n                        this.pageIndex=0;  //将当前页码清零\r\n                        this.list=[];      //数据值清零\r\n                        this.getCommentList();  //加载第一页\r\n                    }else{\r\n                        Toast(result.body.msg);\r\n                    }\r\n                })\r\n            },\r\n            getCommentList(){\r\n                // 分页\r\n                // 1.对象创建成功后加载第一页\r\n                // 2.点击加载更多按钮加载下一页\r\n                // 3.添加新评论,看第一条内容\r\n                this.pageIndex++;\r\n                var url=\"newslist/commentlist?nid=\"+this.id+\"&pno=\"+this.pageIndex;\r\n                this.$http.get(url).then(result=>{\r\n                    console.log(result);\r\n                    if(this.pageIndex<result.body.pageCount+1){\r\n                        // console.log(result.body.data);\r\n                        this.list=this.list.concat(result.body.data)\r\n                    }else{\r\n                        Toast(\"没有更多啦\");\r\n                    }\r\n                    \r\n                })\r\n            }\r\n        },\r\n        created(){\r\n            this.getCommentList();\r\n        },\r\n        props:[\"id\"]\r\n    }\r\n</script>\r\n<style>\r\n#app_subcomment h3{\r\n    font-size: 18px;\r\n}\r\n#app_subcomment textarea{\r\n    font-size: 14px;\r\n    height: 85px;\r\n    margin: 0;\r\n}\r\n#app_subcomment .cmt-list{\r\n    margin: 5px 0;\r\n}\r\n#app_subcomment .cmt-list .cmt-list-item{\r\n    font-size:13px;\r\n}\r\n#app_subcomment .cmt-list .cmt-list-item .cmt-title{\r\n    line-height: 30px;\r\n    background-color: #ccc;\r\n}\r\n#app_subcomment .cmt-list .cmt-list-item .cmt-body{\r\n    line-height: 30px;\r\n    text-indent:2em;\r\n}\r\n</style>"],"sourceRoot":"src\\components\\subcomponents"}]}